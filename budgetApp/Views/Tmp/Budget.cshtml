@{
    ViewData["Title"] = "Budget";
}

<div class="text-center">
    <h1 class="display-4">Budget</h1>
    <p>Please try and create a new budget item</p>
    
    
    <table>
        <tr>
            <td><h4>Name</h4></td>
            <td><h4>Amount</h4></td>
            <td><h4>Priority</h4></td>
            <td><h4>Rise</h4></td>
            <td style="background-color: chocolate; border:none"></td>
            <td style="background-color: chocolate; border:none"></td>
        </tr>
    @if(Model.Mode == "load")
    {
        @foreach(Item x in Model.Budget)
        {
            <tr>
                @if(x.expense)
                {
                    <td style="background-color:red">@x.Name</td>
                }
                else
                {
                    <td style="background-color:green">@x.Name</td>
                }
                <td>@x.Amount</td>
                <td>@x.Priority</td>
                <td>@x.Rise</td>
                <td style="background-color: rgb(168, 90, 34)" onclick="@("window.location.href='" + @Url.Action("EditItem", "Tmp", x) + "'");">Edit</td>
                <td style="background-color: rgb(168, 90, 34)" onclick="@("window.location.href='" + @Url.Action("DeleteItem", "Tmp", x) + "'");">Remove</td>
            </tr>
        }
    }
    </table>
    <br />
    <button onclick="@("window.location.href='" + @Url.Action("NewItem", "Tmp") + "'");">New Item</button>
</div>
