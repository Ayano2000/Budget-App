@{
    ViewData["Title"] = "Budget";
}

<div class="text-center">
    <h1 class="display-4">Budget</h1>
    <p>Please try and create a new budget item</p>
    
    @if(Model.Mode == "load")
    {
        <table>
            <tr>
                <td><h4>Name</h4></td>
                <td><h4>Amount</h4></td>
                <td><h4>Priority</h4></td>
                <td><h4>Rise</h4></td>
                <td style="background-color: chocolate; border:none"></td>
            </tr>
        @foreach(Item x in Model.Budget)
        {
            <tr>
                @if(x.expense)
                {
                    <td style="background-color:red">@x.Name</td>
                }
                else
                {
                    <td style="background-color:green">@x.Name</td>
                }
                <td contenteditable>@x.Amount</td>
                <td contenteditable>@x.Priority</td>
                <td contenteditable>@x.Rise</td>
                <td style="background-color: rgb(168, 90, 34)" onclick="">Remove</td>
            </tr>
        }
        </table>
        <br />
        //load function
    }

