        Likelyhood to rise: <input type="number" id="Rise" name="Rise" min="0" max="5" />
        <input type="submit" id="submit" name="submit" />
    </form> *@
    <button onclick="@("window.location.href='" + @Url.Action("NewItem", "Tmp") + "'");" target="_blank">New Item</button>
</div>
